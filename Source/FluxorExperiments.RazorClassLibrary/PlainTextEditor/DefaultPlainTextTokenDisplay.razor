<span class="fe_plain-text-token-display fe_default-plain-text-token-display"
      title="default-token re-render count: @TokenRerenderCount">
    @{
        var toPlainText = DefaultPlainTextToken.ToPlainText;

        for (var i = 0; i < toPlainText.Length; i++)
        {
            var characterIndex = i;
            var character = toPlainText[characterIndex];
            
            <CharacterDisplay Character="@character.ToString()"
                              ShouldDisplayCursor="@(ShouldDisplayCursor && characterIndex == DefaultPlainTextToken.IndexInContent)"/>
        }
    }
</span>