@using FluxorExperiments.ClassLibrary.PlainTextEditor

@switch (PlainTextToken.PlainTextTokenKind)
{
    case PlainTextTokenKind.StartOfRow:
        <StartOfRowPlainTextTokenDisplay StartOfRowPlainTextToken="(StartOfRowPlainTextToken) PlainTextToken"
                                         ShouldDisplayCursor="GetShouldDisplayCursor()"
                                         TokenRerenderCount="_rerenderCount" />
        break;
    case PlainTextTokenKind.Default:
        <DefaultPlainTextTokenDisplay DefaultPlainTextToken="(DefaultPlainTextToken) PlainTextToken"
                                      ShouldDisplayCursor="GetShouldDisplayCursor()"
                                      TokenRerenderCount="_rerenderCount" />
        break;
    case PlainTextTokenKind.Whitespace:
        <WhitespacePlainTextTokenDisplay WhitespacePlainTextToken="(WhitespacePlainTextToken) PlainTextToken"
                                         ShouldDisplayCursor="GetShouldDisplayCursor()"
                                         TokenRerenderCount="_rerenderCount" />
        break;
}